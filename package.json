{
  "name": "tw-starter-kit",
  "version": "1.0.0",
  "description": "Tailwind. Quick.",
  "main": "index.js",
  "scripts": {
    "dev": "snowpack dev",
    "build": "snowpack build",
    "css:build": "postcss src/styles/index.css -o public/styles.css",
    "css:watch": "postcss src/styles/index.css -o public/styles.css -w",
    "gen:data": "node scripts/generator.js",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "prettier --check \"src/**/*.js\""
  },
  "author": "",
  "license": "MIT",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    ".gitignore",
    "public",
    "src",
    "snowpack.config.js",
    "yarn.lock"
  ],
  "devDependencies": {
    "@snowpack/plugin-postcss": "^1.2.1",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@tailwindcss/jit": "^0.1.5",
    "autoprefixer": "^10.2.5",
    "casual": "^1.6.2",
    "husky": "^5.1.3",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-font-magician": "^3.0.0",
    "postcss-import": "^14.0.0",
    "postcss-nested": "^5.0.5",
    "postcss-reporter": "^7.0.2",
    "posthtml": "^0.15.1",
    "posthtml-expressions": "^1.7.1",
    "posthtml-extend": "^0.6.0",
    "posthtml-img-autosize": "^0.1.6",
    "posthtml-include": "^1.6.2",
    "posthtml-lorem": "^1.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "snowpack": "^3.1.2",
    "tailwindcss": "^2.0.4"
  }
}
